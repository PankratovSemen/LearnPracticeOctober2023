@{

}
@model List<LearnPractice.Models.Database.Articles>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<style>
    #brd {
        background-color: #162037;
        font-size: 16px;
        color: white;
        font-family: "Segoe UI Black";
        padding: 5px;
    }

    h2 {
        font-size: 20px;
        color: white;
        font-family: "Segoe UI Black";
    }

    #st {
        margin-top: 10px;
        background-color: white;
        height: 10px;
        width: 100%
    }

    #brds {
        width: 30px;
        background-color: white;
    }

</style>


<div class="container-fluid">
    <div class="row">
        <form action="~/UserPanel/CreateArticle">
            <input type="submit" value="Добавить статью" />
        </form>
        @foreach (var article in Model)
        {
            <div class="col-3" id="brd">

                <h2><a href="~/Home/Article/@article.Id">@Html.Raw(article.Title)</a></h2>
                <p>@Html.Raw(article.Description)</p>
                <form action="~/UserPanel/DeleteArticle/@article.Id">
                    <input type="submit" value="Удалить" />
                </form>

            </div>
            <div class="col-1" id="brds"></div>
        }
    </div>
</div>
