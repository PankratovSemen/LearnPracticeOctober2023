@using Microsoft.AspNetCore.Identity
@using LearnPractice.Areas.Identity.Data

@inject SignInManager<LearnPracticeUser> SignInManager
@inject UserManager<LearnPracticeUser> UserManager

<style>
    #register {
        margin-top: -20px;
    }

    #login {
        margin-left: 30px;
    }




    #Hello {
        margin-top: -20px;
    }

    #logoutForm {
        margin-left: 400px;
        text-align: right;
        margin-top: -40px;
    }
</style>
@if (SignInManager.IsSignedIn(User))
{

    <a id="Hello" class="nav-link text-dark" asp-controller="UserPanel" asp-action="Index" title="UserPanel">Привет @UserManager.GetUserName(User)!</a>


    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
    </form>

}
else
{

    <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>


    <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>

}

